<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    >
    <Button android:text="Start" android:id="@+id/startLoggingButton" android:gravity="center" android:layout_height="fill_parent" android:layout_width="fill_parent" android:textSize="40sp" android:layout_weight="1"></Button>
    <TextView android:text="Stopped" android:id="@+id/loggingTextView" android:gravity="center" android:layout_height="fill_parent" android:layout_width="fill_parent" android:textSize="50sp" android:layout_weight="1" android:textColor="#FF0000"></TextView>
</LinearLayout>
